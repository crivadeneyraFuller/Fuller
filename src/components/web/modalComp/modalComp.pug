//- Trigger
button(type='button', aria-haspopup='true', aria-expanded='false', data-toggle="modal", data-target="{{'#'+$ctrl.idObj}}" ng-click="$ctrl.cambioModal()")

//- Modal
.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalCompLabel', aria-hidden='true' id="{{$ctrl.idObj}}")
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#modalCompLabel.modal-title {{$ctrl.title}}
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
      .modal-body
        get-object(obj-id="obj" ng-repeat='obj in $ctrl.idObjs')
      .modal-footer
